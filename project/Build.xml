<xml>
	
	<include name="${HXCPP}/build-tool/BuildCommon.xml"/>

	<files id="common">
		<compilerflag value="-IincludeAndroid"/>
		<file name="common/ExternalInterface.cpp"/>
		<file name="common/AppsFlyerExtension.cpp"/>
	</files>
	<files id="iphone">
		<compilerflag value="-IincludeIos"/>
		<compilerflag value="-F../dependencies/ios/" />
		<file name="common/ExternalInterface.mm"/>
		<file name="common/AppsFlyerExtension.mm"/>
	</files>
	
	<set name="DEBUGEXTRA" value="-debug" if="fulldebug" />
	
	<target id="NDLL" output="${LIBPREFIX}appsflyerextension${MSVC_LIB_VERSION}${DEBUGEXTRA}${LIBEXTRA}" tool="linker" toolid="${STD_MODULE_LINK}">
		
		<outdir name="../ndll/${BINDIR}"/>
		<ext value=".ndll" if="windows || mac || linux"/>
		<files id="common"/>
		<files id="iphone" if="iphone"/>
		
	</target>
	
	<target id="default">
		
		<target id="NDLL"/>
		
	</target>
	
</xml>